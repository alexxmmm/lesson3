<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.priority %></td>
        <td><%= todo_item.status %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'X', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class ="paginate">
  <%= will_paginate @todo_items %>
  <%= link_to 'New Todo Item', new_todo_item_path %>
</div>

<div class = "filter">
<%= form_tag todo_items_path, :method => 'get' do  %>
        <h3>Filter by priority:</h3>
        <%= select_tag :priority, options_for_select([1,2,3,4,5],params[:priority]) %>
        <%= submit_tag "Filter List"%>
<% end %>
<%= link_to 'All tasks', todo_items_path %>
</div>
