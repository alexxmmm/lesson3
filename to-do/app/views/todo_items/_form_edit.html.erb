<%= form_for(todo_item) do |f| %>

  <div class="title-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.select:priority, options_for_select([1,2,3,4,5]) %>
  </div>

  <% if todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :status %>
      <%= f.select:status, options_for_select(["active", "closed", "resolved"]) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
